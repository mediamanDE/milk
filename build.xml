<project name="milk" basedir=".." default="build-play-war">
	
	<property file="milk/local.properties" />

	<property name="play.home" value="/opt/play-1.1.1" />
	<property name="dist.dir" value="${basedir}/milk-dist" />
	<property name="app.dir" location="${basedir}/${ant.project.name}" />
	<property name="war.file" location="${dist.dir}/${ant.project.name}" />
	
	<target name="build-play-war">
        <mkdir dir="${dist.dir}" />
		<echo>${play.home}</echo>
		<exec executable="${play.home}/play" vmlauncher="false">
			<arg value="war"/>
			<arg value="${app.dir}" />
            <arg value="--zip"/>
            <arg value="--output=${war.file}"/>
		</exec>
	</target>
</project>