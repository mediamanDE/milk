<project name="milk" basedir=".." default="build-play-war">
	
	<property file="milk/local.properties" />
	<property file="milk/build.properties" />
	
	<target name="build-play-war">
        <mkdir dir="${dist.dir}" />
		<exec dir="${play.home}" executable="play" vmlauncher="false">
			<arg value="war"/>
			<arg value="${app.dir}" />
            <arg value="--zip"/>
            <arg value="--output=${war.file}"/>
		</exec>
	</target>
</project>