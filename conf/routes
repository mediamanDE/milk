# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                      		Application.index
GET		/{username}									User.profile
GET		/{username}/edit							User.edit

GET		/group/										Group.overview
GET		/group/{groupname}							Group.timeline
GET		/group/{groupname}/edit						Group.edit
GET		/group/create								Group.create


GET		/search										Search.main

GET		/thread/{threadID}							Thread.main

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
